
@model List<demo0910.Models.EmpViewModel>




    <table class="table table-striped table-bordered table-hover">

        <tr>
            <td>修改</td>
            <td>刪除</td>
            <td>員工編號</td>
            <td>員工姓名</td>
            <td>性別</td>
            <td>生日</td>
            <td>創建日期</td>
            <td>最後登入日期</td>
            <td>單位代號</td>
            <td>單位名稱</td>
            <td>職稱</td>
            <td>年資</td>

            @*<td>Modify</td>
            <td>EmployeeID</td>
            <td>EmployeeName</td>
            <td>Gender</td>
            <td>Birthday</td>
            <td>CreateDate</td>
            <td>LastLoginDate</td>
            <td>UnitNO</td>
            <td>UnitName</td>
            <td>JobTitle</td>
            <td>seniority</td>*@

        </tr>
        @foreach (var item in Model)//Model是屬性
        {
            
            <tr>
                <td> <input type="button" value="修改" class="btn btn-info" name="Employee" onclick="location.href = '@Url.Action("Edit2")?EmployeeID=@item.EmployeeID'"></td>
                <td> <input type="button" value="刪除" class="btn btn-info" name="Employee" onclick="location.href = '@Url.Action("Delete")?EmployeeID=@item.EmployeeID'"></td>    
                <td>@item.EmployeeID</td>
                <td>@item.EmployeeName</td>
                <td>@item.Gender</td>
                <td>@item.Birthday.ToLongDateString()</td>
                <td>@item.CreateDate.ToLongDateString()</td>
                <td>@item.LastLoginDate.ToLongDateString()</td>
                <td>@item.UnitNO</td>
                <td>@item.UnitName</td>
                <td>@item.JobTitle</td>
                <td>@item.seniority</td>
            </tr>

        }
     


    </table>





